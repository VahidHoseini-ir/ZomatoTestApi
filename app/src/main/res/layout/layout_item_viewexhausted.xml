<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        fontPath="font/okra_medium.ttf"
        android:drawableRight="@drawable/ic_baseline_sentiment_very_dissatisfied_24"
        android:drawableTint="@android:color/black"
        android:gravity="center"
        android:text="No more items found"
        tools:ignore="MissingPrefix" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dip"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dip">

        <ImageView
            android:layout_width="0dip"
            android:layout_height="48dp"
            android:layout_weight="0.75"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/z_watermark" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingLeft="24dip"
            android:paddingRight="24dp"

            android:scaleType="centerInside"
            android:src="@drawable/think_food_think_zomato" />


    </LinearLayout>

</LinearLayout>
