<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="#fff"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="10dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/featured_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/returant_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/featured_image"
                android:layout_margin="16dip"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cuisines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_timing"
                    android:maxLines="1"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:text="Biryani, North Indian"
                    android:textColor="#fff"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_timing"
                    android:drawableLeft="@drawable/ic_timing"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:text=" 9am â€“ 11pm (Mon-Sun)"
                    android:textColor="#fff"
                    android:textSize="12dp" />

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dip">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000" />

            <TextView
                android:id="@+id/average_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Average cost for two  :"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#525252" />

            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="City : Aizawl"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#525252" />

            <TextView
                android:id="@+id/locality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Locality  : Aizawl"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#525252" />


            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Address  :"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#525252" />

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="phone number  :"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#525252" />


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>